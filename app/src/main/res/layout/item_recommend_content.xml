<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:layout_marginTop="3dp">

    <ImageView
        android:id="@+id/recommend_url_icon_large"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/text_title"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:text="拿破仑·希尔《成功学全书》"/>

        <TextView
            android:id="@+id/text_intro"
            android:layout_width="262dp"
            android:layout_height="15dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:text="为你开启成功之路，给你指向未来！一起行动"
            android:textColor="@color/recommend_intro_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/triangle"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_play_count"
                android:layout_width="45dp"
                android:layout_height="10dp"
                android:text="243.5万"
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="#ff848484"
                android:textSize="7sp"/>



            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_sound"
                android:layout_marginStart="50dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_track_count"
                android:layout_width="45dp"
                android:layout_height="10dp"
                android:layout_marginStart="5dp"
                android:text="23集"
                android:textColor="#ff848484"
                android:textSize="7sp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>